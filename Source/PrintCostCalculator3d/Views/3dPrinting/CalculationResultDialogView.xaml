                                                                    <ItemsPresenter />
                                                                </Expander>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </GroupStyle.ContainerStyle>
                                        </GroupStyle>
                                    </CustomControls:MultiSelectListBox.GroupStyle>
                                    <CustomControls:MultiSelectListBox.ItemTemplate>
                                        <DataTemplate>
                                            <templates:CostElementViewTemplate/>
                                        </DataTemplate>
                                    </CustomControls:MultiSelectListBox.ItemTemplate>
                                    <CustomControls:MultiSelectListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                            <!--<Setter Property="IsSelected" Value="{Binding Selected}"/>-->
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <Grid>
                                                                <ContentPresenter />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </CustomControls:MultiSelectListBox.ItemContainerStyle>
                                    <!-- BUGFIX This has to be set, to enable mouse wheel scrolling -->
                                    <CustomControls:MultiSelectListBox.Template>
                                        <ControlTemplate TargetType="{x:Type ItemsControl}">
                                            <Border>
                                                <ItemsPresenter />
                                            </Border>
                                        </ControlTemplate>
                                    </CustomControls:MultiSelectListBox.Template>
                                    <CustomControls:MultiSelectListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </CustomControls:MultiSelectListBox.ItemsPanel>
                                </CustomControls:MultiSelectListBox>
                                <!-- Sub total -->
                                <Separator 
                                    Style="{StaticResource MahApps.Styles.Separator.Clean}"
                                    Background="{DynamicResource MahApps.Brushes.Accent}"
                                    />
                                <DockPanel>
                                    <TextBlock
                                        Text="{Binding TotalCustomAdditionsCosts, StringFormat={}{0:C2}}"
                                        Style="{StaticResource HeaderTextBlock}"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        DockPanel.Dock="Right"/>
                                    <TextBlock 
                                        Text="{x:Static localization:Strings.LabelSubTotal}"
                                        Style="{StaticResource BoldTextBlock}"
                                        DockPanel.Dock="Left"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
            <!-- Worksteps -->
            <TabItem Header="{x:Static localization:Strings.Worksteps}">
                <Grid>
                    <Grid 
                        MinHeight="300"
                        Visibility="{Binding HasWorksteps, Converter={StaticResource BooleanToVisibilityCollapsedReverseConverter}}">
                        <TextBlock 
                            TextAlignment="Center"
                            Style="{StaticResource CenterTextBlock}"
                            Foreground="{DynamicResource MahApps.Brushes.Accent}"
                            Text="{x:Static localization:Strings.NoWorkstepsAddedToThisCalculationDots}"/>
                    </Grid>
                    <!-- If worksteps have been selected -->
                    <Grid Visibility="{Binding HasWorksteps, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                    
                        <!-- Chart -->
                        <charts:SfChart AreaBorderThickness="0" MaxHeight="300" Palette="Metro">
                            <!-- Material usage -->
                            <charts:DoughnutSeries 
                                EnableAnimation="True"
                                EnableSmartLabels="True"
                                ItemsSource="{Binding WorkstepCosts, Mode=TwoWay}"  
                                XBindingPath="Name" YBindingPath="Value"   
                                IsStackedDoughnut="False" 
                                >
                                <charts:DoughnutSeries.AdornmentsInfo>
                                    <charts:ChartAdornmentInfo ShowLabel="True" ShowMarker="True" 
                                                               Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                                               LabelPosition="Outer"
                                                               />
                                </charts:DoughnutSeries.AdornmentsInfo>
                            </charts:DoughnutSeries>
                        </charts:SfChart>
                    
                        <!-- Details grid -->
                        <Border Grid.Column="1"
                                Margin="10"
                                CornerRadius="10"
                                Background="{DynamicResource MahApps.Brushes.Gray10}"
                                >
                            <StackPanel Margin="10">
                                <TextBlock 
                                    Text="{x:Static localization:Strings.HeaderPriceConsistsOf}"
                                    Style="{StaticResource HeaderTextBlock}"
                                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                    TextAlignment="Center"
                                    Margin="0,8"
                                    />

                                <CustomControls:MultiSelectListBox  
                                    Margin="4" Grid.Column="1" 
                                    ItemsSource="{Binding WorkstepCosts}"                                            
                                    SelectionMode="Single"
                                    >
                                    <CustomControls:MultiSelectListBox.GroupStyle>
                                        <GroupStyle>
                                            <GroupStyle.ContainerStyle>
                                                <Style TargetType="{x:Type GroupItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate>
                                                                <Expander IsExpanded="True" Style="{StaticResource DefaultExpander}">
                                                                    <Expander.Header>
                                                                        <TextBlock Text="{Binding (CollectionViewGroup.Name)}" Style="{StaticResource DefaultTextBlock}" Margin="0" Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                                                                    </Expander.Header>
                                                                    <ItemsPresenter />
                                                                </Expander>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </GroupStyle.ContainerStyle>
                                        </GroupStyle>
                                    </CustomControls:MultiSelectListBox.GroupStyle>
                                    <CustomControls:MultiSelectListBox.ItemTemplate>
                                        <DataTemplate>
                                            <templates:CostElementViewTemplate/>
                                        </DataTemplate>
                                    </CustomControls:MultiSelectListBox.ItemTemplate>
                                    <CustomControls:MultiSelectListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                            <!--<Setter Property="IsSelected" Value="{Binding Selected}"/>-->
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                        <Border Background="Transparent" BorderThickness="0">
                                                            <Grid>
                                                                <ContentPresenter />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </CustomControls:MultiSelectListBox.ItemContainerStyle>
                                    <!-- BUGFIX This has to be set, to enable mouse wheel scrolling -->
                                    <CustomControls:MultiSelectListBox.Template>
                                        <ControlTemplate TargetType="{x:Type ItemsControl}">
                                            <Border>
                                                <ItemsPresenter />
                                            </Border>
                                        </ControlTemplate>
                                    </CustomControls:MultiSelectListBox.Template>
                                    <CustomControls:MultiSelectListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </CustomControls:MultiSelectListBox.ItemsPanel>
                                </CustomControls:MultiSelectListBox>
                                <!-- Sub total -->
                                <Separator 
                                    Style="{StaticResource MahApps.Styles.Separator.Clean}"
                                    Background="{DynamicResource MahApps.Brushes.Accent}"
                                    />
                                <DockPanel>
                                    <TextBlock
                                        Text="{Binding TotalWorkstepCosts, StringFormat={}{0:C2}}"
                                        Style="{StaticResource HeaderTextBlock}"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        DockPanel.Dock="Right"/>
                                    <TextBlock 
                                        Text="{x:Static localization:Strings.LabelSubTotal}"
                                        Style="{StaticResource BoldTextBlock}"
                                        DockPanel.Dock="Left"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Subline -->
        <DockPanel Grid.Row="1" Margin="5" Grid.ColumnSpan="3">
            <!-- Save Button -->
            <Button 
                Margin="5,5,5,0" Height="42" Width="50"
                DockPanel.Dock="Right"
                Command="{Binding SaveCalculationCommand}" 
                Style="{StaticResource ImageButton}"
                BorderThickness="0"
                >
                <Button.Content>
                    <Grid Margin="5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Rectangle Width="20" Height="20" Fill="{DynamicResource MahApps.Brushes.Gray3}" Margin="10,5,0,5" HorizontalAlignment="Left">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Uniform" Visual="{iconPacks:MaterialLight Kind=ContentSaveAll}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </Grid>
                </Button.Content>
            </Button>
            <!-- Recommended price-->
            <StackPanel DockPanel.Dock="Left">
                <Separator Style="{StaticResource MahApps.Styles.Separator.Clean}" Height="1"
                           Background="{StaticResource MahApps.Brushes.Gray9}"
                           />
                <TextBlock Text="{x:Static localization:Strings.LabelRecommendedPrice}" HorizontalAlignment="Center"
                           Style="{StaticResource BoldTextBlock}"
                           />
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding SelectedCalculation.TotalCosts, StringFormat={}{0:C2}}" 
                               Style="{StaticResource HeaderTextBlock}"
                               Foreground="{DynamicResource MahApps.Brushes.Accent}"
                               HorizontalAlignment="Center" VerticalAlignment="Bottom"
                               DockPanel.Dock="Left"
                               FontSize="24" Margin="0,10,0,0"
                               />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <TextBlock Text="( " 
                                   Style="{StaticResource DefaultTextBlock}"
                                   FontSize="10"
                                   />
                        <TextBlock Text="{Binding SelectedCalculation.CostsPerPiece, StringFormat={}{0:C2}}"
                                   Style="{StaticResource DefaultTextBlock}"
                                   FontSize="10"
                                   />
                        <TextBlock Text=" x "
                                   Style="{StaticResource DefaultTextBlock}"
                                   FontSize="10"
                                   />
                        <TextBlock Text="{Binding SelectedCalculation.TotalQuantity}" 
                                   Style="{StaticResource DefaultTextBlock}"
                                   FontSize="10"
                                   />
                        <TextBlock Text=" )"
                                   Style="{StaticResource DefaultTextBlock}"
                                   FontSize="10"
                                   />
                    </StackPanel>
                
                </StackPanel>
            </StackPanel>
        </DockPanel>

        <!-- Close Button -->
        <Button 
            Grid.Column="2"
            Margin="5,0,0,0" Height="42" Width="50"
            VerticalAlignment="Top"
            Command="{Binding CancelCommand}" 
            Style="{StaticResource ImageButton}"
            BorderThickness="0"
            >
            <Button.Content>
                <Grid Margin="5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Width="20" Height="20" Fill="{DynamicResource MahApps.Brushes.Accent}" Margin="10,5,0,5" HorizontalAlignment="Left">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Uniform" Visual="{iconPacks:Material Kind=Close}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Grid>
            </Button.Content>
        </Button>

