                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Files -->
            <TabItem Header="{x:Static localization:Strings.Files}">
                <Grid>
                    <!-- Details grid -->
                    <Border Grid.Column="1"
                            Margin="10"
                            CornerRadius="10"
                            Background="{DynamicResource MahApps.Brushes.Gray10}"
                            >
                        <Grid Margin="10">
                            <ScrollViewer 
                                Grid.Row="2"
                                VerticalScrollBarVisibility="Hidden">
                                <CustomControls:MultiSelectListBox  
                                    Margin="4"
                                    ItemsSource="{Binding SelectedCalculation.Files}"                                            
                                    SelectionMode="Single"
                                    >
                                    <CustomControls:MultiSelectListBox.GroupStyle>
                                        <GroupStyle>
                                            <GroupStyle.ContainerStyle>
                                                <Style TargetType="{x:Type GroupItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate>
                                                                <Expander IsExpanded="True" Style="{StaticResource DefaultExpander}">
