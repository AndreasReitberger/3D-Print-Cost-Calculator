        <!-- Cancel Button -->
        <Button 
            x:Name="btnCancel" 
            Content="{x:Static localization:Strings.Close}" 
            Margin="5" VerticalAlignment="Top" Height="42"
            Command="{Binding SaveCommand}" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"
            />
    </Grid>
</UserControl>
